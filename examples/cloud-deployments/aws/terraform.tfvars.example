# =============================================================================
# Provider Credentials
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values

# Netskope credentials (from Settings > Tools > REST API v2)
netskope_api_key    = "your-netskope-api-key"
netskope_server_url = "https://your-tenant.goskope.com/api/v2"

# AWS SSO profile name from ~/.aws/config
# Login first: aws sso login --profile <your-profile>
aws_profile = "your-aws-sso-profile"
aws_region  = "us-west-2"

# =============================================================================
# Publisher Configuration
# =============================================================================

publisher_name = "my-publisher"
instance_type  = "t3.medium"

# =============================================================================
# Network Configuration
# =============================================================================

vpc_cidr            = "10.100.0.0/16"
public_subnet_cidr  = "10.100.0.0/24"
private_subnet_cidr = "10.100.1.0/24"
